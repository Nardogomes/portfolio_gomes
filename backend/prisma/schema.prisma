generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tecnologia {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  image       String
  emphasis    Boolean @default(false)

  @@map("tecnologias")
}

model Projeto {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  images      String[]
  level       Int
  type        String
  emphasis    Boolean  @default(false)
  repository  String

  @@map("projetos")
}
